{
    "name": "receipt_app",
    "version": "2.4.0",
    "description": "A Receipt App, made with Electron Js",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "package": "npx electron-forge package",
        "make": "electron-forge make",
        "publish": "npx electron-forge publish",
        "postinstall": "npx electron-builder install-app-deps",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "repository": "https://github.com/codingwithcn/Receipt-App",
    "keywords": [
        "Electron",
        "quick",
        "start",
        "tutorial",
        "demo"
    ],
    "author": "Chidozie Nnaji",
    "license": "CC0-1.0",
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "Receipt-App"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "publishers": [
                {
                    "name": "@electron-forge/publisher-github",
                    "config": {
                        "repository": {
                            "owner": "codingwithcn",
                            "name": "Receipt-App",
                            "type": "git",
                            "url": "https://github.com/codingwithcn/Receipt-App.git"
                        }
                    },
                    "draft": true
                }
            ]
        }
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.57",
        "@electron-forge/maker-deb": "^6.0.0-beta.57",
        "@electron-forge/maker-rpm": "^6.0.0-beta.63",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
        "@electron-forge/maker-zip": "^6.0.0-beta.63",
        "@electron-forge/publisher-github": "^6.0.0-beta.61",
        "electron": "^16.0.7",
        "electron-builder": "22.10.5"
    },
    "dependencies": {
        "electron-builder-squirrel-windows": "^23.3.1",
        "electron-squirrel-startup": "^1.0.0",
        "electron-updater": "^4.3.9",
        "sqlite3": "^5.0.2"
    },
    "build": {
        "extraResources": [
            "databaseFolder"
        ],
        "productName": "Receipt-App",
        "copyright": "Copyright Â© 2021 ${author}",
        "linux": {
            "category": "Development",
            "publish": false,
            "target": "AppImage"
        },
        "mac": {
            "icon": "src/icon.png",
            "category": "public.app-category.developer-tools"
        },
        "win": {
            "icon": "src/icon.png"
        }
    }
}
